{
  "listeners": [
        {
            "address": "0.0.0.0",
            "port": 5555,
            "https": false
        },
    ],
    "db_clients": [
        {
            "name": "default",
            "rdbms": "postgresql",
            "host": "127.0.0.1",
            "port": 5432,
            "dbname": "tutorial",
            "user": "wanjares",
            "passwd": "",
            "is_fast": false,
            "number_of_connections": 4,
            "timeout": -1.0,
            "auto_batch": false
        }
    ],
    "app": {
        "number_of_threads": 0,
        "document_root": "./static/",
        "upload_path": "uploads",
        "enable_session": true,
        "session_timeout":0,
        
        "file_types": [
            "gif",
            "png",
            "jpg",
            "jpeg",
            "bmp",
            "ico",
            "svg",
            "css",
            "js",
            "html",
            "woff",
            "woff2",
            "ttf",
            "eot"
        ],
        "mime": {
            "text/html": ["html"],
            "text/css": ["css"],
            "text/javascript": ["js"],
            "image/gif": ["gif"],
            "image/jpeg": ["jpg", "jpeg"],
            "image/png": ["png"],
            "image/svg+xml": ["svg"],
            "image/x-icon": ["ico"],
            "application/x-font-ttf": ["ttf"],
            "application/x-font-woff": ["woff"],
            "application/font-woff2": ["woff2"],
            "application/vnd.ms-fontobject": ["eot"]
        },
        "static_files_cache_time": 3600,
        "idle_connection_timeout": 60,
        "max_body_size": 1048576,
        "max_memory_body_size": 524288,
        "load_dynamic_views": true,
        "dynamic_views_path":[
            "./views"
        ],
        "dynamic_views_output_path":"./views",
        
    },
    "plugins": [{
            "name":"drogon::plugin::RealIpResolver",
            "dependencies":[],
            "config":{}
        },
        {
            "name":"drogon::plugin::Redirector",
            "dependencies":[],
            "config":{}
        },
        {
        "name":"drogon::plugin::Hodor",
        "dependencies":["drogon::plugin::RealIpResolver"],
        "config":{
            "algorithm":"token_bucket",
            "urls":["^/api/messages/.*"],
            "time_unit":3600,
            "capacity": 500,
            "ip_capacity": 300,
            "user_capacity": 60,
            "use_real_ip_resolver": true,
            "multi_threads": true,
            "rejection_message":"Too many requests",
            "limiter_expire_time": 3600
        }
    },  {
            "name": "drogon::plugin::SlashRemover",
            "dependencies": ["drogon::plugin::Redirector"],
            "config":{
                "remove_duplicate_slashes": true,
                "redirect": true
            }
        }
    ],
    "custom_config": {
        "content_security_policy": {
            "default-src": ["'self'"],
            "img-src": ["'self'", "data:", "https:"],
            "script-src": ["'self'", "'unsafe-inline'", "'unsafe-eval'"],
            "style-src": ["'self'", "'unsafe-inline'"],
            "font-src": ["'self'", "data:", "https:"],
            "connect-src": ["'self'"],
            "frame-src": ["'none'"],
            "object-src": ["'none'"],
            "base-uri": ["'self'"]
        }
    }
}


